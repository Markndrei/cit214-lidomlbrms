// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

model User {
  id           String       @id @unique
  email        String       @unique
  firstName    String
  lastName     String
  profileImage String?
  role         Role         @default(User)
  colorScheme  String       @default("theme-red")
  createdAt    DateTime     @default(now())
  updateAt     DateTime     @updatedAt
  Book         Book[]
  bookRatings  BookRating[]
}

model Book {
  ISBN              String       @id @default(cuid())
  bookTitle         String
  bookAuthor        String
  yearOfPublication Int
  publisher         String
  imageUrlS         String?
  imageUrlM         String
  imageUrlL         String?
  User              User?        @relation(fields: [userId], references: [id])
  userId            String?
  bookRatings       BookRating[]
}

enum Role {
  User
  Librarian
}

model BookRating {
  id         String @id @default(cuid())
  bookRating Int
  userId     String
  ISBN       String

  user User @relation(fields: [userId], references: [id])
  Book Book @relation(fields: [ISBN], references: [ISBN])
}
